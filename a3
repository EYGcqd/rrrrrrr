# Aufgabe 3
# a) + b)
# faku(n) = n * fac(n-1) ? n > 0 : 1
function faku(n)
    if n != floor(n)
        return false
    end
    p = 1
    for x in 1:n
        p = p*n
    end
    return p
end
function show_me(f, x)
    @info x
    @info f(x)
end

show_me(faku, 10)
show_me(faku, 7)
show_me(faku, -3)
show_me(faku, 3.5)
